rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regles per la col·lecció d'usuaris
    match /users/{userId} {
      // Permet llegir i escriure només si l'usuari està autenticat i és el propietari
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regla temporal per debug (ELIMINAR EN PRODUCCIÓ)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}